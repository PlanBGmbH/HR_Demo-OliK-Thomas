{
    "openai_temperature": 0.3,
    "openai_max_tokens": 1500,
    "allowed_image_extensions": ["png", "jpg", "jpeg", "gif"],
    "allowed_document_extensions": ["pdf", "txt", "docx"],
    "upload_folder": "static/uploads",

    "default_provider": "azure",  
    "translation_provider": "azure",
    "language_detection_provider": "azure",  
    "audio_transcription_provider": "azure", 
    "text_to_speech_provider": "azure", 
    "face_recognition_provider": "aws",  
    "facial_analysis_provider": "aws",  
    "llm_provider": "openai",  
    "image_description_provider": "openai",  
    "text_extraction_provider": "azure",  
    "object_detection_provider": "azure",
    "openai_image_description_model": "gpt-4o",

    "max_tokens_analyze_text": 2000,        
    "max_tokens_summarize": 500,           
    "max_tokens_analyze_urls": 2000,
    "max_content_tokens": 4000,

    "azure_image_container_name": "genai",
    "azure_sas_url_expiry_hours": 1,
    

    "openai": {
      "model": "gpt-4o",
      "max_tokens": 2000,
      "temperature": 0.3
    },
  
    "claude": {
      "model": "claude-v1",
      "max_tokens": 3000,
      "temperature": 0.5
    },
  
    "google_gemini": {
      "model": "gemini-1",
      "max_tokens": 4000,
      "temperature": 0.6
    },
  
    "llama": {
      "model": "llama-2",
      "max_tokens": 1500,
      "temperature": 0.65
    },

    "azure_openai": {
      "model": "gpt-4",
      "max_tokens": 3000,
      "temperature": 0.5
    }
  }